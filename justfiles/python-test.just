import './python-base.just'

# Task which combines the coverage reports generated by test-cov
combine-coverage: ensure-artifacts-dir
    just execute-bash-script combine_coverage

# Run this project's tests using pytest
[group("python")]
test-python:
    just execute-bash-script test_python

# Run this project's tests while recording test coverage
[group("python")]
test-python-cov: ensure-artifacts-dir
    TRACK_COVERAGE="true" just execute-bash-script test_python
