{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":maintainLockFilesWeekly"
  ],
  "git-submodules": {
    "enabled": true
  },
  "pinDigests": true,
  "timezone": "Europe/Dublin",
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "toml",
      "managerFilePatterns": ["/tracked_modules.toml/"],
      "matchStrings": ["[registries.{ 'currentValueTemplate': branch ? branch : 'master', 'depName': repository, 'currentDigest': commit_digest }]"],
      "datasourceTemplate": "git-refs"
    }
  ]
}
